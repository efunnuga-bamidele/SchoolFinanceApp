                               <script type="text/javascript">
                              $.getJSON("settings/session/table.json", function(json){
                                  $('#session').empty();
                                  $('#session').append($('<option>').text("Select a Session"));
                                  $.each(json, function(i, obj){
                                    $('#session').append($('<option>').text(obj.item_name));
                                  });
                              });
                            </script>
