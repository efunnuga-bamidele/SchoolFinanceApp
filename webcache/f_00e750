     $(function() {
            $("#item_1, #xitem_1").on("keydown keyup", sub);
            function sub() {
            $("#vitem_1").val(Number($("#item_1").val().replace(/[,\s?₦]/g, "")) - Number($("#xitem_1").val().replace(/[,\s?₦]/g, "")));
            }
        });
    </script>
